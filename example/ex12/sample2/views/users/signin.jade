doctype html
html
	head
		title = 'Blog Login'
	body
		div(style='float:left;margin:10px')
			a(href='/') Home
		
		div(style='float:right')
			a(href='/register', style='margin:10px;') Register
			a(href='/forget', style='margin:10px;') Forgot password
		
		div(style='padding:50px;')
			form(name='login', action='/apis/login', method='post')
				h1 Login
				div
					p
						label(style='padding-right:50px') Username or E-mail
						input(type='text', name='user', placeholder='username@example.com')
					p
						label(style='padding-right:110px') password
						input(type='text', name='password')
					p
						span
							a(href='/forget', style='padding-right:175px') Forget password
						input(type='submit', name='submit', value='Login')